<div id="<%= dom_id paciente %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Pessoa:</strong>
    <%= paciente.pessoa_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= paciente.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this paciente", paciente, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this paciente", edit_paciente_path(paciente), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
