<%= form_with(model: @pessoa) do |form| %>
  <%= form.fields_for :nome_completo do |nc_form| %>
    <%= render 'users_backoffice/nome_completos/form', f: nc_form %>
  <% end %>

  <%= form.fields_for :enderecos do |ende_form| %>
    <%= render 'users_backoffice/enderecos/form', f: ende_form %>
  <% end %>

  <%= form.fields_for :estado_civil do |ec_form| %>
    <%= render 'users_backoffice/estado_civils/form', f: ec_form %>
  <% end %>

  <%= form.fields_for :telefones do |tel_form| %>
    <%= render 'users_backoffice/telefones/form', f: tel_form %>
  <% end %>

  <%= form.submit "Salvar" %>
<% end %>
