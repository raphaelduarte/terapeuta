    "version": "0.2.0",
    "configurations": [
    {
        "name": "Launch Edge",
        "request": "launch",
        "type": "msedge",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}"
    },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
    {
        "type": "ruby_lsp",
        "request": "launch",
        "name": "Debug program",
        "program": "ruby "
    },
        {
            "type": "rdbg",
            "name": "Attach rdbg",
            "request": "attach"
        },
    {
        "type": "ruby-debug",
        "request": "launch",
        "name": "RSpec",
        "program": "rspec",
        "programArgs": [
            "${workspaceFolder}"
        ],
        "useBundler": false
    },
    {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "chrome",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}"
    },
    
    
        {
            "type": "ruby-debug",
            "request": "launch",
            "name": "Launch File",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "programArgs": [],
            "useBundler": false
        },
        {
            "type": "ruby_lsp",
            "request": "launch",
            "name": "Debug program",
            "program": "ruby "
        },
        {
            "type": "rdbg",
            "name": "Debug current file with rdbg",
            "request": "launch",
            "script": "${file}",
            "args": [],
            "askParameters": true
        },
        {
            "type": "rdbg",
            "name": "Attach with rdbg",
            "request": "attach"
        }
    ]
}